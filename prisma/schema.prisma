model gps_viagem {
  gps_id       String                   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  viagem_id    String?                  @db.Uuid
  motorista_id String?                  @db.Uuid
  timestamp    DateTime?                @default(now()) @db.Timestamp(6)
