  viagens      viagens?                 @relation(fields: [viagem_id], references: [viagem_id], onDelete: NoAction, onUpdate: NoAction)

  // ... (teu conteÃºdo atual)
  @@index([viagem_id, timestamp], map: "ix_gps_viagem_ts")
