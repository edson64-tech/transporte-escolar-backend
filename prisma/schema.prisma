  @@index([programacao_tipo, data_hora], map: "ix_notif_prog")
  @@index([rota_id], map: "ix_notif_rota")
  @@index([status], map: "ix_notif_status")
  @@index([viagem_id], map: "ix_notif_viagem")
  @@index([status], map: "ix_notificacoes_status")
